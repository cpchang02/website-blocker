{
    "manifest_version": 3,
    "name": "Website Blocker",
    "version": "1.0",
    "description": "Your extension description",
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    
    "action": {
      "default_popup": "popup.html"
     
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["popup.css"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "16": "images/hand.png",
      "32": "images/hand.png",
      "48": "images/hand.png",
      "128": "images/hand.png"
    }

  }
  